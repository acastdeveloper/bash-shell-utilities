#!/bin/bash
# upda: "update all" (Actualiza los paquetes apt, flatpak y snap)

echo -e "\n\n///////////// UPDATING /////////////"

echo -e "APT UPDATE"
sudo apt update
echo -e "APT UPGRADE"
sudo apt upgrade
echo -e "APT AUTOREMOVE"
sudo apt autoremove

echo -e "FLATPAK UPDATE"
sudo flatpak update

echo -e "SNAP REFRESH"
sudo snap refresh

echo -e "\n\n///////////// UPDATED /////////////"
